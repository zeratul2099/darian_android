<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.zeratul.darian" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="me.zeratul.darian.Darian"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.zeratul.darian.CustomDarianDateActivity"
            android:label="@string/title_activity_custom_date"
            android:parentActivityName="me.zeratul.darian.Darian" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.zeratul.darian.Darian" />
        </activity>
        <activity
            android:name="me.zeratul.darian.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="me.zeratul.darian.Darian" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.zeratul.darian.Darian" />
        </activity>
        <activity
            android:name="me.zeratul.darian.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="me.zeratul.darian.Darian" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.zeratul.darian.Darian" />
        </activity>
    </application>

</manifest>
